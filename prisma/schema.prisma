datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Appointment {
  id                   String   @id @default(uuid())
  jobNumber            String   @unique
  manualTitle          String
  date                 DateTime?
  time                 DateTime?
  durationHrs          Int?
  durationMins         Int?
  endDateTime          DateTime?
  timeZone             String?
  timeZoneDisplayName  String?  // Correct property name
  vriApproved          Boolean? @default(false)
  vriLabel             Boolean? @default(false)
  vriType              Boolean? @default(false)
  status               String?`
  videoLink            String?
  videoLinkField       String?
  requestorName        String?
  requestorEmail       String?
  createdByLLS         Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  zoomMeetingId        String?
  zoomStartLink        String?
  zoomJoinLink         String?
  zoomInvitation       String?
  vriRoomNumber        Int?

  @@index([date])
  @@index([endDateTime])
  @@index([vriRoomNumber])
}



