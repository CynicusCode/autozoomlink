datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Appointment {
  id              String   @id @default(uuid())
  jobNumber       String   @unique
  manualTitle     String
  date            DateTime?
  time            DateTime?
  durationHrs     Int?
  durationMins    Int?
  endDateTime     DateTime?
  timeZone        String?
  timeZoneDisplayName        String?
  vriApproved     Boolean?  @default(false)
  vriLabel        Boolean?  @default(false)
  vriType         Boolean?  @default(false)
  status          String?
  videoLink       String?
  videoLinkField  String?
  requestorName   String?
  requestorEmail  String?
  createdByLLS    Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  zoomMeetingId   String?  // The unique identifier for the Zoom meeting
  zoomStartLink   String?  // The URL to start the Zoom meeting
  zoomJoinLink    String?  // The URL for participants to join the Zoom meeting
  zoomInvitation  String?  // The invitation text generated by Zoom
  vriRoomNumber   Int?
}

