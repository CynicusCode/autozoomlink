///schema.prisma

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        
generator client {
  provider = "prisma-client-js"
}

model Appointment {
  id            String   @id @default(uuid())
  jobNumber     Int      @unique
  date          DateTime
  time          DateTime
  durationHrs   Int
  durationMins  Int
  address       String
  timeZone      String
  vriApproved   Boolean ///default should be false
  videoScheduled Boolean ///default should be false
  status        String
  videoLink     String?
  createdByLLS  Boolean ///default should be false
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}